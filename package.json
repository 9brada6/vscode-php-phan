{
  "name": "php-phan-vscode",
  "displayName": "PHP Phan ",
  "description": "Error detection support for PHP (Based on PHP IntelliSense by felixfbecker)",
  "publisher": "Tyson Andre",
  "author": "Tyson Andre <tysonandre775@hotmail.com>",
  "license": "MIT",
  "private": true,
  "preview": false,
  "version": "0.0.1-dev",
  "engines": {
    "vscode": "^1.16.0"
  },
  "keywords": [
    "php",
    "error-detection"
  ],
  "categories": [
    "Languages"
  ],
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#6682BA",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phan/phan.git"
  },
  "bugs": {
    "url": "https://github.com/phan/phan/issues"
  },
  "activationEvents": [
    "onLanguage:php",
    "workspaceContains:**/*.php"
  ],
  "main": "./out/extension",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "tslint -c tslint.json \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/mz": "0.0.31",
    "@types/node": "^8.0.24",
    "@types/semver": "^5.3.34",
    "tslint": "^5.0.0",
    "typescript": "^2.1.4",
    "vsce": "^1.8.1",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "mz": "^2.4.0",
    "semver": "^5.3.0",
    "vscode-languageclient": "^3.4.0"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "PHP Phan Integration",
      "properties": {
        "php.phan.phpExecutablePath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The path to a PHP 7.1+ executable to use for Phan."
        },
        "php.phan.phanScriptPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "The path to the phan script to use (using a phan branch supporting the Language Server Protocol). e.g. /path/to/vendor/phan/phan/phan. In the future, this will be optional."
        }
      }
    }
  }
}
